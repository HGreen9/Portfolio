<div class="magic-sparkles" aria-hidden="true"></div>

<style>
  .magic-sparkles {
  position: fixed;
  inset: 0;
  pointer-events: none;
  z-index: 0;
}

.magic-sparkle {
  position: absolute;
  border-radius: 50%;
  background: radial-gradient(circle, #979181 0%, transparent 70%);
  opacity: 0.7;
  animation: floatSparkle 8s linear infinite;
}

@keyframes floatSparkle {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.6;
  }
  50% {
    transform: translateY(-20px) scale(1.2);
    opacity: 1;
  }
  100% {
    transform: translateY(0) scale(1);
    opacity: 0.6;
  }
}
</style>

<script>
  const sparkleContainer = document.querySelector(".magic-sparkles");
  const sparkleCount = 30; // adjust this to add more or fewer sparkles

  for (let i = 0; i < sparkleCount; i++) {
    const sparkle = document.createElement("span");
    sparkle.classList.add("magic-sparkle");

    const size = Math.random() * 6 + 3; // 3px to 9px
    sparkle.style.width = `${size}px`;
    sparkle.style.height = `${size}px`;

    sparkle.style.top = `${Math.random() * 100}%`;
    sparkle.style.left = `${Math.random() * 100}%`;
    sparkle.style.animationDelay = `${Math.random() * 8}s`;

    if (sparkleContainer) {
      sparkleContainer.appendChild(sparkle);
    }
  }
</script>
